@model Nova_Land.Models.Product
@{
}

@*@Html.DisplayFor(model => model.Name)*@

<div class="card">
    <div class="card-body">

    </div>
    <div class="row">
        <div class="col-3">
            <h3>@Html.DisplayFor(model => model.Name)</h3>
        </div>
        <div class="col-3">
            @Model.Description.Substring(0, 50)
        </div>
        <div class="col-3">
            @Html.DisplayFor(model => model.UnitPrice) $
        </div>
        <div class="col-3">
            @using (Html.BeginForm("AddToCart", "Product", Model, FormMethod.Post))
            {
                <button class="btn btn-primary" type="submit">Add To Cart</button>
            }
        </div>
    </div>
</div>