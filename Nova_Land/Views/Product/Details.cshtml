@model Nova_Land.ViewModels.ProductDetailsViewModel
@{
}

@if (Model.IsItemAdded)
{
    <script>
        $(document).ready(function () {
            $('.toast').toast('show');
        });
    </script>
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; top: 50px; right: 50px; background-color: lightgreen">
        <div class="toast-header">
            <strong class="mr-auto" style="color:green">Sucess</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Item Added to Cart
        </div>
    </div>
}

<div class="row">
    <div class="col-6">
        <img src="https://picsum.photos/200/300" />
    </div>
    <div class="col-6">
        <div class="row">
            <div class="col-12">
                <h2>@Model.Product.Name</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <p>@Model.Product.Description</p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                @using (Html.BeginForm("AddToCartDetails", "Product", FormMethod.Get))
                {
                    <input type="hidden" name="ProductId" value="@Model.Product.Id" />
                    <button class="btn btn-primary" type="submit">Add To Cart</button>
                }
            </div>
        </div>
    </div>
</div>